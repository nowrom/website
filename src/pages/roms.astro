---
import Layout from "../layouts/Layout.astro";

const roms = await fetch('https://nowrom.deno.dev/roms').then((r) => r.json());
import Rom from "../components/rom.svelte"
---


<Layout article={true} title="Roms on nowrom" >
    <div class="flex justify-center flex-wrap gap-2 max-w-[60rem] mx-auto">
        {roms.map((x: any)=> <Rom rom={x} />)}    

    </div>
</Layout>
